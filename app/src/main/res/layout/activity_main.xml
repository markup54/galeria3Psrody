<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/obraz1" />
    <!--
    matchparent - rozmiar nadrzÄ™dnego
    wrap content - dostosuj do zawartosci
    -->

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/kolor_przycisku"
        android:padding="@dimen/margines_wewn"
        android:text="@string/poka_obraz"
        android:textColor="#44dd99" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#A12D2D" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/kolor_przycisku"
            android:padding="@dimen/margines_wewn"
            android:layout_margin="@dimen/margines_zewn"
            android:text="@string/wstecz" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/kolor_przycisku"
            android:padding="@dimen/margines_wewn"
            android:layout_margin="@dimen/margines_zewn"
            android:text="@string/dalej" />
    </LinearLayout>

</LinearLayout>